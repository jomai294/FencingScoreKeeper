<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222222"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="jomai294.john.fencingscorekeeper.MainActivity">


    <TextView
        android:text="3:00"
        android:layout_width="wrap_content"
        android:textColor="#ffffff"
        android:textSize="25pt"
        android:layout_height="wrap_content"
        android:id="@+id/bout_time"
        android:layout_above="@+id/startButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp" />

    <TextView
        android:text="0"
        android:textColor="#FF0000"
        android:textSize="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/leftScore"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="13dp"

        android:layout_alignEnd="@+id/left_name" />

    <TextView
        android:text="-"
        android:textSize="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:id="@+id/hy_view"
        android:layout_alignBaseline="@+id/leftScore"
        android:layout_alignBottom="@+id/leftScore"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Left Fencer"
        android:background="#000000"
        android:textColor="#ff0000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/left_name"
        android:layout_alignBottom="@+id/double_touch"
         />

    <TextView
        android:text="0"
        android:textSize="50dp"
        android:textColor="#00FF00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rightScore"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="38dp" />

    <TextView
        android:text="Right Fencer"
        android:textColor="#00ff77"
        android:background="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/right_name"
        android:layout_alignBottom="@+id/double_touch"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/double_touch"
        android:text="Double"
        android:layout_below="@+id/hy_view"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Resume"
        android:layout_width="match_parent"
        android:id="@+id/startButton"
        android:layout_height="150dp"
        android:background="#ffffff"
        android:layout_marginBottom="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="0"
        android:textSize="25dp"
        android:background="#FF0000"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:id="@+id/l_red"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="1"
        android:textSize="25dp"
        android:gravity="center"
        android:background="#FFFFFF"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/period" />

    <TextView
        android:text="0"
        android:textSize="25dp"
        android:gravity="center"
        android:background="#FF0000"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/r_red" />

    <TextView
        android:text="0"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#FFFF00"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/left_name"
        android:id="@+id/left_yellow" />

    <TextView
        android:text="0"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textSize="25dp"
        android:background="#FFFF00"
        android:gravity="center"
        android:id="@+id/right_yellow"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/bout_time" />


</RelativeLayout>
